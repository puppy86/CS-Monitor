    <script>
        //header-nav
        $(".menu_item").mouseenter(function () {
            $(this).addClass("menu_itemActiv");
        });
        $(".menu_item").mouseleave(function () {
            $(this).removeClass("menu_itemActiv");
        });

        // footer-nav     netw_itemFooter
        $(".netw_itemFooter").mouseenter(function () {
            $(this).addClass("menu_itemActiv");
        });
        $(".netw_itemFooter").mouseleave(function () {
            $(this).removeClass("menu_itemActiv");
        });

        // footer-nav     toolsFooter
        $(".toolsFooter").mouseenter(function () {
            $(this).addClass("menu_itemActiv");
        });
        $(".toolsFooter").mouseleave(function () {
            $(this).removeClass("menu_itemActiv");
        });
   
        $(".footer_menu_item").mouseenter(function () {
            if ($(window).outerWidth() > 1023) {
                $(this).addClass("footer_menu_itemActiv");
            }
        });
        $(".footer_menu_item").mouseleave(function () {
            if ($(window).outerWidth() > 1023) {
                $(this).removeClass("footer_menu_itemActiv");
            }
        });

        $(".menuBurger").click(function () {
            $(this).hide();
            $(".menu2").show();
            $(".menuBurgerClose").show();
            $(".header").removeClass(".height40");
            $(".header").addClass(".height100");
            $(".NetworkSelect").hide();
        });

        $(".menuBurgerClose").click(function () {
            $(this).hide();
            $(".menu2").hide();
            $(".menuBurger").show();
            $(".header").addClass("height40");
        });
    </script>
</body>
</html>