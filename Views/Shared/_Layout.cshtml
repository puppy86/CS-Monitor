    <div class="wrap">
        <header class="header">
            <map name="image-map">
                <area target="_blank" alt="Credits.com" title="Credits.com" href="https://credits.com" coords="1,1,165,42" shape="rect">
                <area target="" alt="Home" title="Home" href="~/@network/monitor/index" coords="165,1,297,42" shape="rect">
            </map>
            <div class="mobilogo">
                <img src="/img/logo.png" usemap="#image-map" alt="">
            </div>
            <div class="menuBurger textAlignRight"></div>
            <div class="menuBurgerClose textAlignRight height40 displayNone" style="text-align: right;">X</div>
            <div class="top_head_menu menu2 displayNone">
                <div class="content inner-wrap">
                    <div class="top_head_menu_wrap">
                        <nav class="wrap_menu wrap_menuFix">
                            <div class="menu_item">
                                <a href="https://support.credits.com" target="_blank">Support</a>
                            </div>
                            <div class="menu_item">
                                <a href="https://support.credits.com/en/Home/Contacts" target="_blank">Contacts</a>
                            </div>
                            <form action="~/@network/monitor/SelectNetwork" method="post">
                                <div class="NetworkSelect_Box">
                                    <span class="netw_item norm_font NetworkSelect">Network:</span>
                                    <select class="selectTopMenu NetworkSelect" name="network" onchange="this.form.submit();">
                                        @foreach (var n in Network.Networks)
                                        {
                                            if (n.Id == network)
                                            {
                                                <option value="@n.Id" selected>@n.Title</option>
                                            }
                                            else
                                            {
                                                <option value="@n.Id">@n.Title</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </form>
                            <div class="menu_item netw_item norm_font strelka">Network
                                <div class="dropMenu">
                                    @foreach (var n in Network.Networks)
                                    {
                                        <a href="~/@n.Id/monitor/index" class="dropMenuItem">@n.Title</a>
                                    }
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="content inner-wrap menu2 bg_Gray displayNone">
                <div class="logo-wrap">
                    <img src="/img/logo.png" usemap="#image-map" alt="">
                </div>
                <div class="header-wrap">
                    <nav class="menu">
                        <div class="wrap_menu main_men">
                            <div class="menu_item"><a href="~/@network/monitor/index">Home</a></div>
                            <div class="menu_item"><a href="https://wallet.credits.com" target="_blank">Wallet</a></div>
