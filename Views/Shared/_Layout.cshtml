                        <span class="burg_line"></span>
                        <span class="burg_line"></span>
                        <span class="burg_line"></span>
                    </div>
                </div>
            </div>
        </header>
        @if (networkObj.Updating)
        {
            <div class="content std">
                <h2 class="main_title padding_top_60 p_bot20">We are updating the service. Please try again later.</h2>
            </div>
        }
        else
        {
            <div id="app" class="content std">
                @RenderBody()
